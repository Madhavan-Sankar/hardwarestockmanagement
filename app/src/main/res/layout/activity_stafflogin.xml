<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient1"
    android:layout_height="match_parent"
    tools:context=".stafflogin">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:id="@+id/staffid"
        android:layout_marginBottom="20dp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Service Request"
        android:shadowColor="@android:color/transparent"
        android:padding="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/service"
        android:background="@drawable/shapelogin" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="System Request"
        android:shadowColor="@android:color/transparent"
        android:padding="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/sysreq"
        android:background="@drawable/shapelogin" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View All Service request"
        android:shadowColor="@android:color/transparent"
        android:padding="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/allservice"
        android:background="@drawable/shapelogin" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View All SYSTEM REQUESTS"
        android:shadowColor="@android:color/transparent"
        android:padding="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/allsysreq"
        android:background="@drawable/shapelogin" />

</LinearLayout>